<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dialog_side_margin"
    android:background="@drawable/stroke"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="@dimen/dialog_header_padding">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/primary_l"
            tools:text="123456789012345678901234567890123456789012345678901234567890" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dialog_close_button"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/dialog_header_padding"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            android:tint="@android:color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_scroll_max_height"
        android:padding="@dimen/dialog_padding">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_headers_identation"
                android:layout_marginBottom="@dimen/dialog_line_break"
                android:text="@string/description_header"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_paragraph_break"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi iaculis at nulla vitae lacinia. Nullam feugiat ornare arcu, non pellentesque libero commodo vitae. Cras varius mauris ut orci ultrices bibendum. Etiam quis nisl sagittis, interdum massa non, porta sem. Suspendisse iaculis magna ac enim aliquet" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_headers_identation"
                android:layout_marginBottom="@dimen/dialog_line_break"
                android:text="@string/place_header"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_paragraph_break"
                tools:text="random place" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_categories_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_headers_identation"
                android:layout_marginBottom="@dimen/dialog_line_break"
                android:drawablePadding="@dimen/dialog_image_header_space"
                android:gravity="center_vertical"
                android:text="@string/category_header"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_tag" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_paragraph_break"
                tools:text="Sports, dance" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_target_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_headers_identation"
                android:layout_marginBottom="@dimen/dialog_line_break"
                android:drawablePadding="@dimen/dialog_image_header_space"
                android:gravity="center_vertical"
                android:text="@string/target_header"
                android:textStyle="bold"
                tools:drawableStartCompat="@drawable/ic_target_families" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_paragraph_break"
                tools:text="Families" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_start_date_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_headers_identation"
                android:layout_marginBottom="@dimen/dialog_line_break"
                android:drawablePadding="@dimen/dialog_image_header_space"
                android:gravity="center_vertical"
                android:text="@string/start_date_header"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_start_time" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_paragraph_break"
                tools:text="Avui a les 17:00h" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_end_date_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_headers_identation"
                android:layout_marginBottom="@dimen/dialog_line_break"
                android:drawablePadding="@dimen/dialog_image_header_space"
                android:gravity="center_vertical"
                android:text="@string/end_date_header"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_end_time" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_paragraph_break"
                tools:text="Avui a les 17:00h" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_organizer_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_headers_identation"
                android:layout_marginBottom="@dimen/dialog_line_break"
                android:drawablePadding="@dimen/dialog_image_header_space"
                android:gravity="center_vertical"
                android:text="@string/organizer_header"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_organizer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_organizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_paragraph_break"
                tools:text="Paquito Paco" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dialog_favorites_button"
            android:layout_width="@dimen/dialog_bottom_buttons_size"
            android:layout_height="@dimen/dialog_bottom_buttons_size"
            android:src="@drawable/selector_favorites" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dialog_share_button"
            android:layout_width="@dimen/dialog_bottom_buttons_size"
            android:layout_height="@dimen/dialog_bottom_buttons_size"
            android:src="@drawable/ic_calendar" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
